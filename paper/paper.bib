    issn={2042-5783},
    doi={10.1186/2042-5783-2-3},
    url={https://pubmed.ncbi.nlm.nih.gov/22587947},
    url={https://doi.org/10.1186/2042-5783-2-3},
    language={eng}
}

@article{Tringe:2005,
