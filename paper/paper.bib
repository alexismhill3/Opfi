@article {Rybarski:2021,
	author = {Rybarski, James R. and Hu, Kuang and Hill, Alexis M. and Wilke, Claus O and Finkelstein, Ilya J},
	title = {Metagenomic Discovery of CRISPR-Associated Transposons},
	elocation-id = {2021.08.16.456562},
	year = {2021},
	doi = {10.1101/2021.08.16.456562},
	publisher = {Cold Spring Harbor Laboratory},
	abstract = {CRISPR-associated transposons (CASTs) co-opt Cas genes for RNA-guided transposition. CASTs are exceedingly rare in genomic databases; recent surveys have reported Tn7-like transposons that co-opt Type I-F, I-B, and V-K CRISPR effectors. Here, we expand the diversity of reported CAST systems via a bioinformatic search of metagenomic databases. We discover new architectures for all known CASTs, including novel arrangements of the Cascade effectors, new self-targeting modalities, and minimal V-K systems. We also describe new families of CASTs that have co-opted the Type I-C and Type IV CRISPR-Cas systems. Our search for non-Tn7 CASTs identifies putative candidates that co-opt Cas12a for horizontal gene transfer. These new systems shed light on how CRISPR systems have co-evolved with transposases and expand the programmable gene editing toolkit.Competing Interest StatementThe authors are co-inventors on patent applications filed based on this work.},
	URL = {https://www.biorxiv.org/content/early/2021/08/17/2021.08.16.456562},
	eprint = {https://www.biorxiv.org/content/early/2021/08/17/2021.08.16.456562.full.pdf},
	journal = {bioRxiv}
}
